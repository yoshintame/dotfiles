{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "Lua 5.4",
    "path": [
      "?.lua",
      "?/init.lua"
    ]
  },
  "diagnostics": {
    "globals": [
      "hs",
      "spoon",
      "ipc"
    ],
    "disable": [
      "lowercase-global"
    ]
  },
  "workspace": {
    "library": [
      "/Applications/Hammerspoon.app/Contents/Resources/extensions/hs"
    ],
    "checkThirdParty": false,
    "ignoreDir": [
      "Spoons"
    ]
  },
  "completion": {
    "callSnippet": "Both"
  },
  "hint": {
    "enable": true
  }
}

